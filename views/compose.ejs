<%- include('partials/header') -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="floatingInput">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off" id="floatingInput">
        <label for="floatingTextarea">Post</label>
        <textarea class="form-control" name="postBody" id="floatingTextarea" rows="5" cols="30"></textarea>
    </div>
        <button class="btn btn-primary" type="submit" name="postButton">Publish</button>
</form>

<%- include('partials/footer') -%>